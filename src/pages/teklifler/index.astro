---
import PageLayout from "../../layouts/PageLayout.astro";
import { services } from "../../data/services";
---

<PageLayout title="TÃ¼m Teklifler">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 py-8">
    {services.map((service) => (
      service && service.url ? (
        <a
          href={service.teklifUrl}
          class="block bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300"
        >
          <img
            src={service.image}
            alt={service.name}
            class="w-full h-48 object-cover rounded-t-lg"
            width="400"
            height="200"
          />
          <div class="p-6">
            <h2 class="text-xl font-bold text-gray-800 mb-2">
              {service.name} Teklifi
            </h2>
            <p class="text-gray-600 text-sm">
              {service.description.substring(0, 100)}...
            </p>
            <button
              class="mt-4 inline-block bg-[#4DA8DA] text-white font-bold py-2 px-4 rounded-md hover:bg-[#3a8db8] transition-colors"
            >
              Teklif Al
            </button>
          </div>
        </a>
      ) : null
    ))}
  </div>
</PageLayout>