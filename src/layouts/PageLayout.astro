---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
const pathSegments = currentPath.split("/").filter((segment) => segment !== "");
const currentPageName =
  pathSegments.length > 0
    ? pathSegments[pathSegments.length - 1].replace(/-/g, " ")
    : "Anasayfa";
---

<!doctype html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="../../src/styles/global.css" />
    <title>{title} | Sigorta</title>
  </head>
  <body>
    <Header />

    <main class="py-12">
      <div class="container mx-auto px-4">
        <h1 class="text-7xl font-bold text-gray-800 mb-4 text-center">
          {title}
        </h1>
        <div class="w-4/5 h-1 bg-[#FFD66B] mx-auto my-6"></div>
        <p class="text-gray-600 text-lg mb-8 text-center">
          <a href="/" class="text-[#4DA8DA] hover:text-gray-600">Anasayfa</a> / {
            currentPageName
          }
        </p>
        <slot />
      </div>
    </main>

    <Footer />

    <script>
      import AOS from "aos";
      import "aos/dist/aos.css"; // AOS stillerini import et

      AOS.init({
        once: true, // Animasyon sadece bir kere tetiklensin
        duration: 700, // Animasyon s√ºresi
      });
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
