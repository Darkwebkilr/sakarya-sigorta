---
import { Image } from 'astro:assets';
import PageLayout from "./PageLayout.astro";
import ServiceSidebar from "../components/ServiceSidebar.astro";

export interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
}

const { title, description, image } = Astro.props;
const currentPath = Astro.url.pathname;
---

<PageLayout title={title}>
  <div class="flex flex-col md:flex-row gap-8">
    <!-- Left Sidebar for Services -->
    <aside class="md:w-1/4">
      <ServiceSidebar currentPath={currentPath} />
    </aside>

    <!-- Right Content Area -->
    <article class="md:w-3/4 bg-white p-6 rounded-lg shadow-md">
      <Image src={image} alt={title} width={800} height={400} class="w-full h-64 object-cover rounded-lg mb-6" />
      <h1 class="text-4xl font-bold text-gray-800 mb-4">{title}</h1>
      <p class="text-gray-600 text-lg mb-4">
        {description}
      </p>
      <slot />
      <div class="mt-8 text-center">
        <a href="/teklifler" class="inline-block bg-[#FFD66B] text-gray-800 font-bold py-3 px-8 rounded-md hover:bg-[#FFC04D] transition-colors text-lg">
          {title} Teklifi Al
        </a>
      </div>
    </article>
  </div>
</PageLayout>