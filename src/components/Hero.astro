---
import Image from "astro/components/Image.astro";
---

<div class="swiper hero-slider relative h-[600px] w-full text-white">
  <div class="swiper-wrapper">
    <!-- Slide 1 -->
    <div class="swiper-slide">
      <img src={'/img/services/Sigortacılık.webp'} alt="Sigortacılık" class="absolute inset-0 w-full h-full object-cover" width="1920" height="1080" />
      <div class="absolute inset-0 w-full h-full bg-black opacity-50"></div>
      <div
        class="relative max-w-screen-xl mx-auto px-4 h-full flex items-center"
      >
        <div class="content-container w-full lg:w-1/2 p-10 lg:p-5">
          <h1 class="title text-3xl lg:text-5xl font-extrabold leading-tight">
            <span>Sigortacılıkta</span>
            <span class="text-[#FFD66B]">Doğru Adres</span>
          </h1>
          <p class="subtitle text-xl mt-6 max-w-lg leading-relaxed">
            Geleceğinizi güvence altına almak için ihtiyacınız olan tüm sigorta
            çözümleri bir arada. Hızlı, güvenilir ve size özel teklifler için
            yanınızdayız.
          </p>
          <a
            href="/teklifler"
            class="cta-button inline-block mt-8 px-8 py-4 bg-[#FFD66B] text-gray-800 font-bold rounded-md transition-transform hover:scale-105"
          >
            Hemen Teklif Al
          </a>
        </div>
      </div>
    </div>
    <!-- Slide 2 -->
    <div class="swiper-slide">
      <img src={'/img/services/kasko.webp'} alt="Kasko" class="absolute inset-0 w-full h-full object-cover" width="1920" height="1080" />
      <div class="absolute inset-0 w-full h-full bg-black opacity-50"></div>
      <div
        class="relative max-w-screen-xl mx-auto px-4 h-full flex items-center"
      >
        <div class="content-container w-full lg:w-1/2 p-10 lg:p-5">
          <h1 class="title text-3xl lg:text-5xl font-extrabold leading-tight">
            <span>Kasko & Trafik</span>
            <span class="text-[#FFD66B]">Güvenceniz Biziz</span>
          </h1>
          <p class="subtitle text-xl mt-6 max-w-lg leading-relaxed">
            Aracınız için en geniş kapsamlı kasko ve zorunlu trafik sigortası
            tekliflerini saniyeler içinde alın.
          </p>
          <a
            href="/hizmetlerimiz"
            class="cta-button inline-block mt-8 px-8 py-4 bg-[#FFD66B] text-gray-800 font-bold rounded-md transition-transform hover:scale-105"
          >
            Hizmetleri İncele
          </a>
        </div>
      </div>
    </div>
    <!-- Slide 3 -->
    <div class="swiper-slide">
      <img src={'/img/services/saglık-sigorta.webp'} alt="Sağlık" class="absolute inset-0 w-full h-full object-cover" width="1920" height="1080" />
      <div class="absolute inset-0 w-full h-full bg-black opacity-50"></div>
      <div
        class="relative max-w-screen-xl mx-auto px-4 h-full flex items-center"
      >
        <div class="content-container w-full lg:w-1/2 p-10 lg:p-5">
          <h1 class="title text-3xl lg:text-5xl font-extrabold leading-tight">
            <span>Sağlığınız</span>
            <span class="text-[#FFD66B]">Önemlidir</span>
          </h1>
          <p class="subtitle text-xl mt-6 max-w-lg leading-relaxed">
            Özel sağlık sigortası ve tamamlayıcı sağlık sigortası ile
            sağlığınızı en iyi koşullarda koruma altına alın.
          </p>
          <a
            href="/iletisim"
            class="cta-button inline-block mt-8 px-8 py-4 bg-[#FFD66B] text-gray-800 font-bold rounded-md transition-transform hover:scale-105"
          >
            Bize Ulaşın
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="swiper-pagination"></div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
</div>

<style>
  /* Swiper'ın navigasyon ve pagination elemanlarının renklerini, temanın sarı rengiyle eşleşecek şekilde eziyoruz. */
  .hero-slider {
    --swiper-navigation-color: #ffd66b;
    --swiper-pagination-color: #ffd66b;
  }

  /* 768px'den küçük ekranlarda navigasyon oklarını gizle */
  @media (max-width: 767px) {
    .swiper-button-next,
    .swiper-button-prev {
      display: none;
    }
  }
</style>

<script>
  import Swiper from "swiper";
  import { Navigation, Pagination, Autoplay, EffectFade } from "swiper/modules";
  import "swiper/css";
  import "swiper/css/navigation";
  import "swiper/css/pagination";
  import "swiper/css/effect-fade";

  const swiper = new Swiper(".hero-slider", {
    modules: [Navigation, Pagination, Autoplay, EffectFade],
    loop: true,
    effect: "fade",
    speed: 300,
    fadeEffect: {
      crossFade: true,
    },
    autoplay: {
      delay: 5000,
      disableOnInteraction: false,
    },
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });
</script>

