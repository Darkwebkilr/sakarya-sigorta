---
export interface Props {
  title: string;
  excerpt: string;
  imageUrl: string;
  url: string;
}

const { title, excerpt, imageUrl, url } = Astro.props;
---

<div
  class="bg-white rounded-lg shadow-lg overflow-hidden transform transition-transform"
  data-aos="fade-up"
>
  <a href={url}>
    <img src={imageUrl} alt={title} class="w-full h-48 object-cover" />
  </a>
  <div class="p-6">
    <h3 class="text-xl font-bold text-gray-800 mb-2">{title}</h3>
    <p class="text-gray-600 mb-4">{excerpt}</p>
    <a
      href={url}
      class="font-bold text-[#4DA8DA] hover:text-[#3a8db8] transition-colors"
    >
      Devamını Oku &rarr;
    </a>
  </div>
</div>
