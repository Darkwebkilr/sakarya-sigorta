---
import { Icon } from "astro-icon/components";

const servicesLinks = [
  { name: "Kasko Sigortası", url: "/teklif/kasko-sigortasi" },
  { name: "Trafik Sigortası", url: "/teklif/trafik-sigortasi" },
  { name: "Sağlık Sigortası", url: "/teklif/ozel-saglik-sigortasi" },
  { name: "Konut Sigortası", url: "/teklif/konut-sigortasi" },
];

const quickLinks = [
  { name: "Anasayfa", url: "/" },
  { name: "Hizmetlerimiz", url: "/hizmetlerimiz" },
  { name: "Teklifler", url: "/teklifler" },
  { name: "Kaza Tespit Tutanağı", url: "/kaza-tespit-tutanagi" },
  { name: "Hakkımızda", url: "/hakkimizda" },
  { name: "İletişim", url: "/iletisim" },
];

const socialLinks = [
  { name: "Facebook", icon: "mdi:facebook", url: "#" },
  { name: "Twitter", icon: "mdi:twitter", url: "#" },
  { name: "Instagram", icon: "mdi:instagram", url: "#" },
];
---

<footer class="bg-[#2a3a4b] text-white pt-16 pb-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      <!-- Column 1: Logo & About -->
      <div class="footer-col">
        <a href="/" class="flex items-center gap-2 text-xl font-bold mb-4">
          <img
            src="/img/Logo.png"
            alt="Sakarya Kaya Sigorta Logo"
            class="h-32 w-auto"
          />
        </a>
        <p class="text-gray-400">
          Geleceğinizi güvence altına almak için buradayız. Size en uygun
          sigorta çözümleriyle tanışın.
        </p>
      </div>

      <!-- Column 2: Services -->
      <div class="footer-col">
        <h4 class="font-bold text-lg mb-4">Hizmetlerimiz</h4>
        <ul>
          {
            servicesLinks.map((link) => (
              <li class="mb-2">
                <a
                  href={link.url}
                  class="text-gray-400 hover:text-white transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Column 3: Quick Links -->
      <div class="footer-col">
        <h4 class="font-bold text-lg mb-4">Hızlı Erişim</h4>
        <ul>
          {
            quickLinks.map((link) => (
              <li class="mb-2">
                <a
                  href={link.url}
                  class="text-gray-400 hover:text-white transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Column 4: Social Media -->
      <div class="footer-col">
        <h4 class="font-bold text-lg mb-4">Bizi Takip Edin</h4>
        <div class="flex gap-4">
          {
            socialLinks.map((link) => (
              <a
                href={link.url}
                aria-label={link.name}
                class="text-gray-400 hover:text-white transition-colors"
              >
                <Icon name={link.icon} class="w-6 h-6" />
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-700 pt-8 text-center text-gray-500">
      <p>
        &copy; {new Date().getFullYear()} Sakarya Kaya Sigorta. Tüm hakları saklıdır.
      </p>
    </div>
  </div>
</footer>
